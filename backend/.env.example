# Application Settings
APP_NAME=CDC Assessment Portal API
DEBUG=false

# Database - Use PostgreSQL in production
# For AWS RDS PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./cdc_portal.db

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-min-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS - Comma-separated list of allowed origins
# For production, set to your frontend domain(s)
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# AWS Configuration (optional)
AWS_REGION=ap-south-1
S3_BUCKET=your-s3-bucket-name
